{
    "manifest_version": 2,
    "name": "Legibold",
    "developer": {
        "name": "Emilia Williamson",
        "url": "https://emiliawil.dev/"
    },
    "version": "0.1",

    "description": "Legibold is a Firefox extension that helps you read faster with bionic reading.",
    
    "icons": {
        "48": "icons/48.png",
        "64": "icons/64.png"
    },
    
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["app.js"]
        }
    ]
}